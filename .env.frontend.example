# Frontend Environment Variables
# Copy this file to .env.local and fill in your own values for each environment

# ===== Application =====
REACT_APP_NAME=MERN App
REACT_APP_VERSION=1.0.0

# ===== API Configuration =====
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# ===== Authentication =====
REACT_APP_JWT_TOKEN_KEY=auth_token
REACT_APP_USER_KEY=user_info

# ===== Features =====
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false

# ===== Third-party Services =====
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# ===== File Upload =====
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ===== Logging =====
REACT_APP_LOG_LEVEL=info
