# Backend Environment Variables
# Copy this file to .env and fill in your own values for each environment

# ===== Application ===== 
NODE_ENV=development
PORT=5000
APP_NAME=MERN_App
APP_VERSION=1.0.0

# ===== Database =====
MONGODB_URI=mongodb://localhost:27017/mern_dev
MONGODB_DB_NAME=mern_dev

# ===== JWT Authentication =====
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRE=30d

# ===== CORS Configuration =====
CORS_ORIGIN=http://localhost:3000

# ===== Email Configuration (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM_NAME=MERN App
SMTP_FROM_EMAIL=noreply@mernapp.com

# ===== Logging =====
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# ===== Error Tracking (Sentry) =====
SENTRY_DSN=

# ===== Session Configuration =====
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_TIMEOUT=1800000

# ===== File Upload =====
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# ===== Monitoring =====
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=60000
